{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "target": "es2015",
        "allowJs": true,
        "baseUrl": "lib",
        "declaration": true,
        "inlineSourceMap": false,
        "lib": [
            "esnext"
        ],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "pretty": true,
        "listEmittedFiles": false,
        "listFiles": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "jest"
        ],
        "traceResolution": false,
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "lib",
        "test"
    ]
}