{
  "name": "use-boilerplate",
  "version": "1.0.0",
  "description": "CLI that easily scaffolds boilerplates from the 'awesome-universal-boilerplates' repository.",
  "main": "dist/lib/index.js",
  "engines": {
    "node": ">=12.18.0"
  },
  "bin": {
    "boilerplate": "dist/lib/index.js"
  },
  "files": [
    "lib"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prestart": "npm run build",
    "start": "node dist/lib/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antoine-coulon/use-boilerplate.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "Node.js",
    "TypeScript",
    "opensource",
    "github"
  ],
  "author": "Antoine Coulon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/antoine-coulon/use-boilerplate/issues"
  },
  "homepage": "https://github.com/antoine-coulon/use-boilerplate#readme",
  "devDependencies": {
    "@types/inquirer": "^8.1.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.0",
    "@types/sade": "^1.7.3",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.1.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@slimio/github": "^1.0.0",
    "chalk": "^4.1.2",
    "cliui": "^7.0.4",
    "download-git-repo": "^3.0.2",
    "inquirer": "^8.1.3",
    "kleur": "^4.1.4",
    "sade": "^1.7.4"
  }
}
